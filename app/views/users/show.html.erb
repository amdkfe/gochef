<div class="page">

  <div class ="profile_title">
    <div class ="profile">
      <% if @user.avatar.file %>
        <%= image_tag @user.avatar.url%>
      <% end %>
    </div>
    <p class ="title"><%= @user.name %></p>
    
    <% if user_signed_in? %>
      <button class="button edit">
        <%= link_to(raw("<i class='fa fa-cog'></i>"), user_edit_path(@user.id)) %> 
      </button>
    <% end %>
    <button class = "button back">
      <%= link_to("Back to the chefs", "/" ) %>
    </button>
  <p class = "bio">Bio: <span>
    <%= @user.bio %>

  </p>
  </div>
</div>


