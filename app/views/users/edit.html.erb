<h2>
    Edit Profile</h2>
<h3>
    <%= @user.name %>
</h3>

<%= form_for @user, url: '/user/update', method: 'put'  do |f| %>
    <div class="field">
        <%= f.label :email %>
            <br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div><br>
    <div class="avatar">
        <%= f.label :Avatar %></br>
        <%= image_tag (@user.avatar.url) %>
    </div>
        <div class="field">
        <%= f.label :Avatar_mk2 %><br>
        <%= f.file_field :image %>
    </div>
    </div><br>
    <div class="field">
        <%= f.label :bio%>
            <br />
            <%= f.text_area :bio, autofocus: true, autocomplete: "bio" %>
    </div></br>

    <div class="actions">
        <%= f.submit "Update" %>
    </div>
    <% end %>
    </br>
        <%= link_to "Back", :back %>

