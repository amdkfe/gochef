<div class="welcome">
  <!-- <h2>Please enter your Postcode:</h2> -->

      <%= form_for @current_user, url: welcome_post_path(@current_user), method: 'post'  do |f| %>

    <div id="sb-search" class="sb-search">
      
      <%= f.text_field :postcode, autofocus: true, autocomplete: "SL44NP", placeholder: "What's your postcode?", :class => "sb-search-input"%>
        <%= f.hidden_field :id %>
    </div>

    <div>
      <%= f.submit "GO", :class => "sb-search-submit"%>
    </div>
  <% end %>
</div>
