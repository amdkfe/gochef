<div class="list">
    <% @users.each do |user| %>
        <div class="chef-list">
            <%= link_to "#{user.name}", user_path(user) %>
                <button class="button show">
                    <%= link_to "Show", user_path(user, :id => user.id)%>
                </button>
                <div class="ratings_bar">
                <% 5.times do |i|%>
                   <% if user.average_rating > i %>
                     <%= link_to(raw(fa_icon "spoon"), user_path(user, :id => user.id))%> 
                       <% else %>
                         <!--<%= link_to(raw("<i class='fa fa-star'></i>"), user_path(user, :id => user.id)) %> -->
                              <% end %>
                            <% end %>
                        </div>
                        </div>
                        <% end %>
                         
