      <div class="review">
        <% @user.reviews.each do |review| %>
        <div class="c">
          <%= review.comment %> 
          <div class = "rating">
            <%= review.rating %>
            <% 5.times do |i|%>
               <% if review.rating > i %>
                 <%= fa_icon "spoon"%> 
               <% else %>
                  <!--<%= "<i class='fa fa-star'></i>" %> -->
               <% end %>
              <% end %>


            <br>
            <%= review.created_at %>
          </div>
        </div>
        <% end %>
      </div>
