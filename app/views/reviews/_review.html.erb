    <section class="reviews">

      <div class="post_review">



        <%= form_for @review, url: user_reviews_path(@user) do |f| %>
        <div class="field">
          <%= f.label "Review #{@user.name}" %>
          <br />
          <%= f.text_area :comment, autofocus: false, autocomplete: "review" %>
        </div>
        <table class ="rating_input">
            <tr>
              <td><%= f.radio_button :rating,1 %> <%= f.label "1" %></td>
              <td><%= f.radio_button :rating, 2 %> <%= f.label "2" %></td>
              <td><%= f.radio_button :rating, 3 %> <%= f.label "3" %></td>
              <td><%= f.radio_button :rating, 4 %> <%= f.label "4" %></td>
              <td><%= f.radio_button :rating, 5 %> <%= f.label "5" %></td>
            </tr>
        </table>
        
        
        <div class="actions">
        <%= f.submit "Post" %>
        </div>
        <% end %>





      </div>
      <br>
      <hr>
      <br>





    </section>


