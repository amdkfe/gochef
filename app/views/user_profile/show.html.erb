
<h2>Edit Profile</h2>

<h3><%= @user.name %></h3>

<%= form_for @user, url: '/user_profile', method: 'put'  do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="field">
    <%= f.label :bio%><br />
    <%= f.text_area :bio, autofocus: true, autocomplete: "bio" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>


<%= link_to "Back", :back %>

